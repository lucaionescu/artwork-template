{
  "name": "artwork-template",
  "version": "1.0.0",
  "description": "Template for creating artwork with canvas-sketch.",
  "main": "index.js",
  "scripts": {
    "init": "canvas-sketch src/index.js --new",
    "run": "canvas-sketch --open src/index.js --output=./output",
    "stream-to-mp4": "canvas-sketch --open src/index.js --output=./output --stream [ mp4 --scale=1080:-1 ]",
    "stream-to-gif": "canvas-sketch --open src/index.js --output=./output --stream [ gif --scale=1080:-1 ]"
  },
  "dependencies": {
    "canvas-sketch": "^0.7.5",
    "canvas-sketch-util": "^1.10.0"
  }
}
